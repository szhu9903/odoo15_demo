    <record id="view_tree_hardware_configvar" model="ir.ui.view">
        <field name="name">设备配置项</field>
        <field name="model">hardware.hardware.configvar</field>
        <field name="arch" type="xml">
            <tree>
                <field name="hcv_type" widget="many2one_tags"/>
                <field name="hcv_variablekey"/>
                <field name="hcv_variablevalue"/>
                <field name="hcv_describe"/>
            </tree>
        </field>
    </record>

    <record id="view_search_hardware_configvar" model="ir.ui.view">
        <field name="name">设备配置项</field>
        <field name="model">hardware.hardware.configvar</field>
        <field name="arch" type="xml">
            <search>
                <field name="hcv_variablekey" />
            </search>
        </field>
    </record>

    <record id="action_hardware_configvar" model="ir.actions.act_window">
        <field name="name">设备配置项</field>
        <field name="res_model">hardware.hardware.configvar</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

